<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.memcached</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Fast caching of any kind of data.</string>

      <key>Port</key>
      <integer><%= @port %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= @executable %></string>
      <string>-l</string>
      <string><%= @host %></string>
      <string>-p</string>
      <string><%= @port %></string>
      <string>-U</string>
      <string><%= @port %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= @user %></string>

    <key>WorkingDirectory</key>
    <string><%= @datadir %></string>

    <key>StandardErrorPath</key>
    <string><%= "#{@logdir}/console.log" %></string>

    <key>StandardOutPath</key>
    <string><%= "#{@logdir}/console.log" %></string>
  </dict>
</plist>
